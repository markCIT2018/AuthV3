extends layout

block content
    head
     <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
     <link href="https://getbootstrap.com/docs/4.1/examples/sign-in/signin.css" rel="stylesheet">
    body
    .container-fluid
        <img src="/images/Tate-Modern-logo-bw.jpeg" alt="Smiley face" height="80" width="300">
        <body class="text-center">
        <form class="form-signin" method = 'post', action ='/users/register'>
         <h1 class="h3 mb-3 font-weight-normal">Please enter your information</h1>
         <label for="email" class="sr-only">Email address</label>
         <input type="email" id="email" name ="email" class="form-control" placeholder="Email address" required autofocus>
         <label for="password" class="sr-only">Password</label>
         <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
         <div class="col">
                <label for="Role"></label>
                <select class="custom-select d-block w-300" id="role" name = "role" required>
                  <option value="">Choose...</option>
                  <option>Admin</option>
                  <option>Customer</option>
                </select>
                <div class="invalid-feedback">
                  Please Select Role.
                </div>
                </div>
        .container-fluid
        p 
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
        </form>